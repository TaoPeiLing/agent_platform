ZHIPU_API_KEY= c859bf3bcec5fbcf4b5897a2c3dc9a6e.hS8pVPUzEJNLinwo

# ====== 平台默认配置 ======
# 默认使用的模型提供商(openai, doubao, moonshot, baidu,zhipu)
DEFAULT_MODEL_PROVIDER=openai

# ====== 日志配置 ======
LOG_LEVEL=info
LOG_DIR=logs
LOG_TO_FILE=true
LOG_TO_CONSOLE=true

# ====== 其他配置 ======
# 工具加载路径配置
# TOOLS_CONFIG_PATH=agent_configs/tools/

# 数据库配置
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/agent_platform

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 应用配置
HOST=0.0.0.0
PORT=8000
ENV=development
DEBUG=True
SECRET_KEY=your_secret_key_change_me_in_production

# 监控配置
METRICS_PORT=8001
ENABLE_OPENAI_TRACING=true

# 安全配置
JWT_SECRET=your-jwt-secret
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000